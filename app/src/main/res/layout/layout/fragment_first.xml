<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <View
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bank_icon"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/helvetica_medium"
        android:text="@string/accInfo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bank_icon" />

    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="167dp"
        android:layout_height="173dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_info" />

    <TextView
        android:id="@+id/role_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/role"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/user_picture"
        app:layout_constraintTop_toBottomOf="@id/account_info" />

    <TextView
        android:id="@+id/default_role_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/default_role"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/role_info"
        app:layout_constraintTop_toBottomOf="@id/account_info" />

    <TextView
        android:id="@+id/gross_info"
        android:layout_width="41dp"
        android:layout_height="17dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/gross"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/user_picture"
        app:layout_constraintTop_toBottomOf="@id/role_info" />

    <ImageView
        android:id="@+id/currency_icon1"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/currency"
        app:layout_constraintStart_toStartOf="@+id/gross_info"
        app:layout_constraintTop_toBottomOf="@+id/default_role_info" />

    <TextView
        android:id="@+id/default_gross_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/default_gross"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/currency_icon1"
        app:layout_constraintTop_toBottomOf="@id/default_role_info" />

    <TextView
        android:id="@+id/net_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/net"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/user_picture"
        app:layout_constraintTop_toBottomOf="@id/gross_info" />

    <ImageView
        android:id="@+id/currency_icon2"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/currency"
        app:layout_constraintStart_toStartOf="@+id/net_info"
        app:layout_constraintTop_toBottomOf="@+id/default_gross_info" />

    <TextView
        android:id="@+id/default_net_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/helvetica_light"
        android:text="@string/default_gross"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/currency_icon2"
        app:layout_constraintTop_toBottomOf="@id/default_gross_info" />
</androidx.constraintlayout.widget.ConstraintLayout>
